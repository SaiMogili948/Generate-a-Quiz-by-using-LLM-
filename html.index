<!DOCTYPE html>
<html>
  <head> </head>
  <body>

  <meta charset="UTF-8">
  <title>Wiki Quiz App</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 20px; }
    button { padding: 6px 12px; margin-right: 10px; }
    .tab { display: none; }
    .active { display: block; }
    .card {
      border: 1px solid #ccc;
      padding: 15px;
      margin-bottom: 10px;
      border-radius: 6px;
    }
    table { width: 100%; border-collapse: collapse; margin-top: 15px; }
    th, td { border: 1px solid #ccc; padding: 8px; }
    th { background: #f2f2f2; }
    #modal {
      display: none;
      position: fixed;
      top: 10%;
      left: 50%;
      transform: translateX(-50%);
      width: 70%;
      background: #fff;
      border: 1px solid #333;
      padding: 15px;
    }
  </style>


<h1>Wiki Quiz App</h1>

<button onclick="showTab('tab1')">Generate Quiz</button>
<button onclick="showTab('tab2')">Past Quizzes</button>

<div id="tab1" class="tab active">
  <h2>Generate Quiz</h2>
  <input id="url" placeholder="Wikipedia URL" size="70">
  <br><br>
  <button onclick="generateQuiz()">Generate</button>
  <div id="result"></div>
</div>

<div id="tab2" class="tab">
  <h2>Past Quizzes</h2>
  <table id="historyTable">
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>URL</th>
      <th>Details</th>
    </tr>
  </table>
</div>

<div id="modal">
  <button onclick="closeModal()">Close</button>
  <div id="modalContent"></div>
</div>

<script>
function showTab(id) {
  document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
  document.getElementById(id).classList.add('active');
  if (id === 'tab2') loadHistory();
}

async function generateQuiz() {
  const url = document.getElementById("url").value;
  const res = await fetch("http://localhost:8000/generate", {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ url })
  });
  const data = await res.json();
  renderQuiz(data, document.getElementById("result"));
}

function renderQuiz(data, container) {
  container.innerHTML = `
    <div class="card">
      <h3>${data.title}</h3>
      <p>${data.summary}</p>
    </div>
  `;
  data.quiz.forEach((q, i) => {
    container.innerHTML += `
      <div class="card">
        <strong>Q${i+1}. ${q.question}</strong>
        <ul>${q.options.map(o => `<li>${o}</li>`).join("")}</ul>
        <p><b>Answer:</b> ${q.answer}</p>
        <p><b>Difficulty:</b> ${q.difficulty}</p>
        <p>${q.explanation}</p>
      </div>
    `;
  });
}

async function loadHistory() {
  const res = await fetch("http://localhost:8000/history");
  const data = await res.json();
  const table = document.getElementById("historyTable");
  table.innerHTML = `
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>URL</th>
      <th>Details</th>
    </tr>
  `;
  data.forEach(item => {
    const row = table.insertRow();
    row.insertCell(0).innerText = item.id;
    row.insertCell(1).innerText = item.title;
    row.insertCell(2).innerText = item.url;
    row.insertCell(3).innerHTML =
      `<button onclick="viewDetails(${item.id})">Details</button>`;
  });
}

async function viewDetails(id) {
  const res = await fetch(`http://localhost:8000/history/${id}`);
  const data = await res.json();
  renderQuiz(data, document.getElementById("modalContent"));
  document.getElementById("modal").style.display = "block";
}

function closeModal() {
  document.getElementById("modal").style.display = "none";
}
</script>

</body>
</html>

  
